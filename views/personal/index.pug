extends ../layout.pug
block pageTitle
  | Personal del Hospital

block content
  .container
    .card.shadow.mb-4
      .card-body
        h2.mb-3 Personal del Hospital
        a.btn.btn-success(href="/personal/nuevo") Nuevo Personal
        table.table.table-striped.table-hover
          thead
            tr
              th Usuario
              th Nombre
              th Apellido
              th Rol
              th Email
              th Tel√©fono
              th Acciones
          tbody
            each p in personal
              tr
                td= p.usuario
                td= p.nombre
                td= p.apellido
                td= p.rol
                td= p.email
                td= p.telefono
                td
                  a.btn.btn-warning.btn-sm(href=`/personal/editar/${p.id}`) Editar
                  form(action=`/personal/eliminar/${p.id}` method="POST" style="display:inline")
                    button.btn.btn-danger.btn-sm.ms-2(type="submit") Eliminar