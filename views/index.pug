extends layout.pug

block content
  h2.mb-4 Bienvenido #{session && session.nombre ? session.nombre : 'al sistema'}
  if session && session.rol
    p.text-muted.mb-4
      | Rol: #{session.rol === 'medico' ? 'Dr.' : ''} #{session.rol}
  h4 Mensajes
  //- Aqu√≠ puedes iterar sobre mensajes importantes
  each mensaje in mensajes
    .card.card-message.p-3
      h5.mb-1= mensaje.titulo
      p.mb-0= mensaje.texto